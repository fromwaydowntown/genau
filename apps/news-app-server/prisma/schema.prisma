datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TranslationRequest {
  createdAt         DateTime                      @default(now())
  id                String                        @id @default(cuid())
  newsArticle       NewsArticle?                  @relation(fields: [newsArticleId], references: [id])
  newsArticleId     String?
  originalContent   String?
  status            EnumTranslationRequestStatus?
  translatedContent String?
  updatedAt         DateTime                      @updatedAt
  user              User?                         @relation(fields: [userId], references: [id])
  userId            String?
}

model NewsArticle {
  content             String?
  createdAt           DateTime             @default(now())
  id                  String               @id @default(cuid())
  publishedDate       DateTime?
  source              String?
  title               String?
  translationRequests TranslationRequest[]
  updatedAt           DateTime             @updatedAt
}

model ApiConfig {
  apiKey    String?
  baseUrl   String?
  createdAt DateTime @default(now())
  endpoint  String?
  id        String   @id @default(cuid())
  name      String?
  updatedAt DateTime @updatedAt
}

model User {
  createdAt           DateTime             @default(now())
  email               String?              @unique
  firstName           String?
  id                  String               @id @default(cuid())
  lastName            String?
  password            String
  roles               Json
  translationRequests TranslationRequest[]
  updatedAt           DateTime             @updatedAt
  username            String               @unique
}

enum EnumTranslationRequestStatus {
  Option1
}
